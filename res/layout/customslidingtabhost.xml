<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <!-- Start of actionbar -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/TitleBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left|top"
        android:orientation="horizontal" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal" >

            <ImageButton
                style="@style/TitleBarOperation"
                android:layout_gravity="center"
                android:layout_marginBottom="4dip"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/home_bg"
                android:paddingBottom="3dip"
                android:onClick="onHome"
                android:src="@drawable/home_def" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_marginRight="5dip"
                android:background="@drawable/separator" />

            <TextView
                style="@style/TitleBarText"
                android:paddingLeft="8dip"
                android:text="@string/app_name" />
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="7dip"
                android:background="@drawable/separator" />
            
            <ImageButton
                style="@style/TitleBarOperation"
                android:layout_marginBottom="4dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="6dip"
                android:background="@null"
                android:onClick="onEnter"
                android:src="@drawable/about_click" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="@drawable/separator" />

            <ImageButton
                style="@style/TitleBarOperation"
                android:layout_marginBottom="4dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="6dip"
                android:background="@drawable/home_bg"
                android:onClick="onSearch"
                android:src="@drawable/search" />
        </LinearLayout>
    </LinearLayout>
    <!-- End of the actionbar -->
        
    <LinearLayout android:id="@+id/contentViewLayout" 
		android:orientation="vertical"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent" 
		android:layout_marginTop="44dip" 
		android:layout_marginBottom="55dip">
        <!-- This is the main content.
        Make sure to give enough marginTop so that 
        it does not overlap with the actionbar.
         -->
    </LinearLayout>
    
	<HorizontalScrollView
    	android:id="@+id/bottomBar"
    	android:scrollbarTrackHorizontal="@drawable/scrollbar_horizontal_track"
    	android:scrollbarThumbHorizontal="@drawable/scrollbar_horizontal_thumb"
    	android:scrollbarSize="2dip"
    	android:layout_alignParentBottom="true" 
    	android:layout_width="fill_parent"
    	android:background="@drawable/bottom_bar" 
    	android:layout_height="55dip">
    	<RadioGroup
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"
        		android:id="@+id/bottomMenu">
    	</RadioGroup>
	</HorizontalScrollView>
</RelativeLayout>
